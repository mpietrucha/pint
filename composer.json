{
    "name": "mpietrucha/pint",
    "description": "Laravel Pint utils.",
    "license": "MIT",
    "type": "library",
    "version": "1.0.0",
    "authors": [
        {
            "name": "MichaÅ‚ Pietrucha",
            "email": "michal.pietrucha@off-site.pl"
        }
    ],
    "require": {
        "php": "^8.5",
        "composer": "^2.8.9"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^3.0",
        "ergebnis/composer-normalize": "^2.48",
        "laravel/pint": "^1.22",
        "mpietrucha/utility": "^1.0",
        "phpstan/phpstan": "^2.1",
        "symfony/console": "^7.3",
        "symfony/process": "^7.3",
        "symfony/var-dumper": "^7.3"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Mpietrucha\\Pint\\": "src/"
        }
    },
    "bin": "bin/pint",
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer compile --quiet",
                "composer compile:add"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@hooks:add",
            "@prettier:config"
        ],
        "post-update-cmd": [
            "@hooks:update",
            "@composer normalize"
        ],
        "compile": "./compile",
        "compile:add": "git add bin/pint > /dev/null",
        "hooks:add": "cghooks add --ignore-lock",
        "hooks:update": "cghooks update",
        "lint": "pint --verbose --parallel",
        "prettier:config": "curl -sSLO https://raw.githubusercontent.com/mpietrucha/prettier/refs/heads/main/dist/.prettierrc",
        "test": [
            "@test:lint",
            "@test:types"
        ],
        "test:lint": "@lint --test",
        "test:types": "phpstan analyse --ansi"
    }
}
